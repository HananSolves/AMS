@model AMS.Application.DTOs.Course.CreateCourseDto

@{
    ViewData["Title"] = "Edit Course";
    var isTeacher = ViewBag.IsTeacher as bool? ?? false;
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Edit Course</h1>
        <p class="mt-2 text-sm text-gray-600">Update course details</p>
    </div>

    <div class="card">
        <form asp-action="Edit" method="post" class="space-y-6" id="courseEditForm">
             @* @Html.AntiForgeryToken() *@
            <input type="hidden" name="id" value="@ViewBag.CourseId"/>

            <div asp-validation-summary="All" class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded"></div>

            <div>
                <label asp-for="CourseCode" class="block text-sm font-medium text-gray-700 mb-2">Course Code</label>
                <input asp-for="CourseCode" type="text" class="input-field" placeholder="CSC-414" required/>
                <span asp-validation-for="CourseCode" class="text-red-600 text-sm"></span>
                <p class="text-xs text-gray-500 mt-1">Format: ABC-123</p>
            </div>

            <div>
                <label asp-for="CourseName" class="block text-sm font-medium text-gray-700 mb-2">Course Name</label>
                <input asp-for="CourseName" type="text" class="input-field" placeholder="Enterprise Application Development" required/>
                <span asp-validation-for="CourseName" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                <textarea asp-for="Description" rows="4" class="input-field" placeholder="Course description..." required></textarea>
                <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="CreditHours" class="block text-sm font-medium text-gray-700 mb-2">Credit Hours</label>
                <input asp-for="CreditHours" type="number" min="1" max="6" class="input-field" required/>
                <span asp-validation-for="CreditHours" class="text-red-600 text-sm"></span>
            </div>

            <!-- Always keep TeacherId as a hidden field so the model binder receives a value and we don't show an assign control -->
            <input type="hidden" asp-for="TeacherId" value="@((ViewBag.TeacherId != null) ? ViewBag.TeacherId : Model.TeacherId)"/>

            @if (isTeacher)
            {
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <p class="text-sm text-blue-800">
                        <svg class="inline h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        You will be automatically assigned as the teacher for this course.
                    </p>
                </div>
            }

            <div class="flex gap-4">
                <button type="submit" class="flex-1 btn-primary">Save Changes</button>
                <a asp-action="Index" class="flex-1 btn-secondary text-center">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
