@{
    ViewData["Title"] = "Error";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <div class="text-6xl font-bold text-primary-600 mb-4">Oops!</div>
        <h1 class="text-2xl font-semibold text-gray-900 mb-2">Something went wrong</h1>
        <p class="text-gray-600 mb-6">We're sorry, but an error occurred while processing your request.</p>
        <a asp-controller="Dashboard" asp-action="Index" class="btn-primary inline-block">Return to Dashboard</a>
    </div>
</div>