<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="h-full">
    <div class="min-h-full">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <nav class="bg-primary-600 shadow-lg">
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                    <div class="flex h-16 items-center justify-between">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-white text-xl font-bold">AMS</span>
                            </div>
                            <div class="hidden md:block">
                                <div class="ml-10 flex items-baseline space-x-4">
                                    <a asp-controller="Dashboard" asp-action="Index" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                                    <a asp-controller="Course" asp-action="Index" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Courses</a>
                                    @if (User.IsInRole("Student"))
                                    {
                                        <a asp-controller="Attendance" asp-action="ViewAttendance" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">My Attendance</a>
                                    }
                                    <a asp-controller="Report" asp-action="Index" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Reports</a>
                                </div>
                            </div>
                        </div>
                        <div class="hidden md:block">
                            <div class="ml-4 flex items-center md:ml-6">
                                @{
                                    var userName = $"{User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value} {User.FindFirst(System.Security.Claims.ClaimTypes.Surname)?.Value}";
                                }
                                <span class="text-white text-sm mr-4">Welcome, @userName</span>
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium transition">
                                        Logout
                                    </button>
                                </form>
                            </div>
                        </div>
                        </div>
                </div>
            </nav>
        }

        <main>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                    <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded relative" role="alert">
                        <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                    </div>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
                    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded relative" role="alert">
                        <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                    </div>
                </div>
            }
            
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Ensure jQuery is loaded before validation/unobtrusive scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>