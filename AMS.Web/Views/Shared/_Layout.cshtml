<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="h-full">
<div class="min-h-full">
    @if (User.Identity?.IsAuthenticated == true)
    {
    <nav class="bg-primary-600 shadow-lg">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <span class="text-white text-xl font-bold">AMS</span>
                    </div>
                    <!-- Mobile menu button -->
                    <div class="md:hidden ml-3">
                        <button id="mobileMenuToggle" class="text-white p-2 rounded-md focus:outline-none">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-4">
                            <a asp-controller="Dashboard" asp-action="Index" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                            <a asp-controller="Course" asp-action="Index" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Courses</a>
                            @if (User.IsInRole("Student"))
                            {
                            <a asp-controller="Attendance" asp-action="ViewAttendance" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">My Attendance</a>
                            }
                            <a asp-controller="Report" asp-action="Index" class="text-white hover:bg-primary-700 px-3 py-2 rounded-md text-sm font-medium">Reports</a>
                        </div>
                    </div>
                </div>
                <div class="hidden md:block">
                    <div class="ml-4 flex items-center md:ml-6">
                        @{
                        var userName = $"{User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value} {User.FindFirst(System.Security.Claims.ClaimTypes.Surname)?.Value}";
                        }
                        <span class="text-white text-sm mr-4">Welcome, @userName</span>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                            @* Antiforgery token removed - validation disabled in Program.cs *@
                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium transition">
                                Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Mobile navigation (hidden by default) -->
            <div id="mobileNav" class="md:hidden hidden mt-2">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a asp-controller="Dashboard" asp-action="Index" class="block text-white px-3 py-2 rounded-md text-base font-medium">Dashboard</a>
                    <a asp-controller="Course" asp-action="Index" class="block text-white px-3 py-2 rounded-md text-base font-medium">Courses</a>
                    @if (User.IsInRole("Student"))
                    {
                    <a asp-controller="Attendance" asp-action="ViewAttendance" class="block text-white px-3 py-2 rounded-md text-base font-medium">My Attendance</a>
                    }
                    <a asp-controller="Report" asp-action="Index" class="block text-white px-3 py-2 rounded-md text-base font-medium">Reports</a>
                </div>
                <div class="px-4 pb-3 border-t border-primary-700">
                    <div class="flex items-center justify-between">
                        <div class="text-white">
                            <div class="text-sm font-medium">@userName</div>
                        </div>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                            @* Antiforgery token removed - validation disabled in Program.cs *@
                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-md text-sm font-medium">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    }

    <main>
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-4">
            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            </div>
        </div>
        }

        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
            @RenderBody()
        </div>
    </main>
</div>

<!-- Ensure jQuery is loaded before validation/unobtrusive scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', function () {
        var toggle = document.getElementById('mobileMenuToggle');
        var nav = document.getElementById('mobileNav');
        if (toggle && nav) {
            toggle.addEventListener('click', function () {
                nav.classList.toggle('hidden');
            });
        }
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>